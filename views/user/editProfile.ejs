<% include ../partials/header %>
<h1>Profile Edit</h1>
<form action="/user/<%= currentUser._id%>?_method=PUT" method="POST">
    <div class="field">
        <label for="">first name</label>
        <input type="text" name="user[firstName]" value="<%= currentUser.firstName %>">
    </div>
    <div class="field">
        <label for="">Last Name</label>
        <input type="text" name="user[lastName]" value="<%= currentUser.lastName %>">
    </div>
    <label for="">Gender:</label>
    <select name="user[gender]">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
    </select>
    <div class="field">
        <label for="">Birthday</label>
        <input type="date" name="user[age]" value="<%= currentUser.age %>">
    </div>
    <div class="field">
        <label for="">Company</label>
        <input type="text" name="user[company]" value="<%= currentUser.company %>">
    </div>
    <div class="field">
        <label for=""></label>
        <textarea name="user[bio]" id="" cols="30" rows="10"><%= currentUser.bio %></textarea>
    </div>
    <input type="submit" value="submit">
</form>
<% include ../partials/footer %>