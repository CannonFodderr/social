<% include ../partials/header %>
<div class="container">
    <div class="card medium horizontal">
        <div class="profileImage card-image waves-effect waves-block waves-light">
          <img src="<%= currentUser.avatar %>" alt="<%= currentUser.firstName %>'s profile picture">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h1><%= currentUser.firstName %> <%= currentUser.lastName%></h1>
            <p><strong>Gender:</strong> <%= currentUser.gender %></p>
            <p><strong>Birthday:</strong> <%= currentUser.bday.toDateString() %></p>
            <p><strong>Work:</strong> <%= currentUser.company %></p>
            <p><strong>Bio:</strong> <%= currentUser.bio %></p>
            <p><strong>Email:</strong> <%= currentUser.username %></p>
            <p></p>
            <div class="card-action">
            <p><a class="btn teal" href="/user/<%= currentUser._id %>/edit">edit</a></p>
            </div>
          </div>
      </div>
      </div>
      <div class="input-field col s12">
      <form action="/user/<%= currentUser._id %>/post" method="POST">
          <textarea class="materialize-textarea hoverable" placeholder="Say something..." name="post[content]" id="postTextArea" cols="40" rows="3"></textarea>
      <div class="controls">
              <div class="controlBTN">
                  <a href="#" class="deep-purple waves-effect waves-light btn">
                      <i class="material-icons">camera_alt</i>
                  </a>
                  <button class="btn purple waves-effect waves-light btn-small hoverable" type="submit" name="action">
                      <i class="material-icons">send</i>
                  </button>
               </div>
          </div>
          </form>
      </div>
<h4>My Posts</h4>
<% posts.forEach((post)=>{ %>
    <div class="col s12 m7">
            <div class="card horizontal">
              <div class="card-image">
                <img src="<%= post.image %>">
              </div>
              <div class="card-stacked">
                <div class="card-content">
                  <p><%= post.content%></p>
                </div>
                <div class="card-action">
                  <a class="btn orange" href="/user/<%=currentUser._id%>/post/<%= post._id %>/edit">Edit</a>
                  <form class="deletePost" action="/user/<%=currentUser._id%>/post/<%= post._id %>?_method=DELETE" method="POST">
                    <button class="btn red"><i class="material-icons">delete</i></button>
                  </form>
                </div>
              </div>
            </div>
          </div>
<% }) %>
</div>


<% include ../partials/footer %>